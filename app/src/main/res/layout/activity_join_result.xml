<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/main_background"
    android:paddingTop="@dimen/status_bar_height"
    android:layout_height="match_parent"
    tools:context=".activity.JoinResultActivity">

    <com.spotlight.falcon_ui.ui.FalconTopBarView
        android:id="@+id/jr_top_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/jr_center_falcon"
        android:layout_width="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/jr_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/jr_center_falcon"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jr_center_falcon"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/jr_bottom_bg"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_height="183dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/jr_bottom_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="44dp"
            android:textColor="#9A9A9A"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="00:00:00"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FF8804"
            android:textSize="14dp"
            android:text="@string/main_connect_duration"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/jr_ip_group"
            android:layout_marginTop="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/jr_bottom_ip_bg"
            android:layout_height="30dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/jr_ip"
                android:textColor="@color/c_FFF2AB"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/jr_ip"
                android:text="8.8.8.8"
                android:textColor="@color/c_FFF2AB"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>