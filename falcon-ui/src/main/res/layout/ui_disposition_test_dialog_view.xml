<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@mipmap/disposition_testing_dialog_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:background="@drawable/disposition_disconnect_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/disposition_test_animation"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleType="centerInside"
            android:layout_marginTop="54dp"
            app:lottie_imageAssetsFolder="testsp/images"
            app:lottie_fileName="testsp/data.json" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="44dp"
            android:textColor="#1C1C1E"
            android:textSize="14dp"
            android:text="@string/test_text"
            android:layout_marginBottom="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>